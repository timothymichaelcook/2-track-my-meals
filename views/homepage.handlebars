<!-- Loop over each object in the meals array -->
{{#each meals as |meal| }}
<div class="row mb-4 meal">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/meal/{{meal.id}}">{{meal.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="drinks">ğŸ»</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="meals-amount">{{format_amount meal.num_meals}}</span>
      meals eaten out!
    </p>
    <p>Created by {{meal.user.name}} on {{format_date meal.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{meal.description}}
    </p>
  </div>
</div>
{{/each}}
